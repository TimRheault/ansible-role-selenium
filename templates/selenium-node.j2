[Unit]
Description=selenium node
After=syslog.target network.target

[Service]
User=mwcomm
ExecStart=/usr/bin/java -Dwebdriver.chrome.driver=/usr/bin/chromedriver -jar {{ selenium_install_dir }}/selenium/selenium-server-standalone-3.8.1.jar -log /cwt/log/selenium/selenium_ChromeNode.log -role node -port 5552 -hub http://localhost:4444/grid/register -browser 'browserName=chrome,platform=LINUX,maxInstances=5'
Restart=on-failure
RestartSec=20s

[Install]
WantedBy=multi-user.target
